@charset "utf-8";
.kui_d_pane{position:absolute;width:226px;margin:0;z-index:9999;}
/*.kui_data_content_pane{border:1px solid #1F73C9;width:370px;overflow:hidden;font-size:12px;position:absolute;left:0;z-index:100;top:0;background:#fff;height:225px;}*/
.kui_data_content_pane{
    width: 480px;
    height: 260px;
    background-color: #fff;
    position: absolute;
    top: 184px;
    left: 26px;
    z-index: 999;
    /*padding-left: 20px;*/
    border: 1px solid #d6d6d6;}
.kui_data_content_pane a:link,.kui_data_content_pane a:visited{/*color:#222222;*/text-decoration:none;font-weight:900;}
.kui_data_content_pane a:hover{color:#fff;}
.kui_date_reset{display: none;}
.kui_date_reset span{cursor:pointer;background:#2192D6;color:#FFF;padding:2px 5px;margin-left:3px;}
.kui_prev_next_month{    background-color: #659ff5; border-bottom:0px solid #fd5900;height:28px;line-height:28px;text-align:center;}
.kui_prev_m,.kui_today{float:left;margin-left:6px;}
.kui_prev_m{width: 28px;
	height: 28px;
	text-align: center;
	color:#fff;
	font-family: Consolas;}
.kui_today,.kui_tomorrow{width:148px;text-align:center;color:#fff;cursor:default;}
.kui_tomorrow{float:right;}
.kui_next_m{float:right;
	width: 28px;
	height: 28px;
	text-align: center;
	color:#fff;
	font-family: Consolas;
}
.kui_data_tab,.kui_date_info{width:226px;margin:2px auto;zoom:1;overflow:hidden; } 
dl.kui_data_tab dt{font-weight:400;background-color: #eeeeee;}
.kui_data_tab dt,.kui_date_info dt{height:30px;text-align:center;border-bottom:0px solid #B2C4D2;border-right:none;cursor:default;font:14px/30px arial;width:30px;float:left;text-align:center;}
.d_th_bg{color:#659ff5;}
.kui_date_info dt{border-left:0px solid #B2C4D2;border-bottom:0px solid #B2C4D2;color:#333;}
.kui_date_info .kui_td_kong{/*background:#fff;cursor:default;*/}
.kui_time_pane{background:#2092D6;line-height:22px;height:22px;overflow:hidden;margin-bottom:4px;padding-bottom:1px;background:url(date_top.png) 4px 0 no-repeat;}
.kui_clean_btn{float:left;padding-left:6px;}
.kui_close_btn{float:right;padding-right:6px;}
.kui_time{float:left;padding-left:8px;}
.kui_time input{width:17px;padding:1px;line-height:12px;height:12px;margin-right:2px;margin-top:2px;_margin-top:1px;}
.kui_date_info .td_select{background:#659ff5;color: #fff;}
.kui_date_info .td_hover{background-color: #659ff5;cursor:pointer;}
.kui_txt_hide{display:none;}
dl.kui_date_info .kui_td_hui{cursor:auto;color:#999;font-weight:400;}
a img{border:0;}
#left_table,#right_table{float:left;width:216px;height:233px;overflow:hidden;/*padding-left: 20px;*/}
#left_table {
	padding-left: 20px;
	border-right: 1px solid #f5f5f5;
	padding-right: 10px
}
#right_table {
	padding-left: 10px;
}
.kui_d_pane {
	position: static !important;
	width: 480px;
	height: 260px;
}


.kt{
	font-size: 0.16rem;
	color: #fff;
	text-align: center;
	display: block;
	line-height: 0.5rem;
	height: 0.5rem;
	background:linear-gradient(91deg,rgba(123,173,248,1),rgba(73,137,232,1));
	box-shadow:0px 2px 10px 0px rgba(0, 0, 0, 0.12);
	border-radius: 0.04rem;
	margin: 0.12rem 0 0rem;
}
.mask_layout {
	display: none;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: rgba(0,0,0,0.7);
}
.per_box{
	display: none;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	border-radius:0.06rem;
	width: 3.24rem;
	box-sizing: border-box;
	padding: 0 0.2rem 0.05rem;
	background-color: #fff;
}
.per_box .tit {
	font-size: 0.18rem; 
	height: 0.5rem;
	line-height: 0.5rem;
	text-align: center;
}
.per_box .user_info {
	background-color: #F6F6F6;
	padding:0 0.13rem;
	box-sizing: border-box;
	border-radius:0.02rem;
}
.per_box .user_info input {
	font-size: 0.14rem;
	padding: 0.16rem 0;
	width: 100%;
	border:none;
	background-color: transparent;
}
.per_box .user_info .name {
	border-bottom: 0.01rem solid #e5e5e5;
}
.submit_tj {
	display: block;
	width: 100%;
	height: 0.5rem;
	line-height: 0.5rem;
	text-align: center;
	font-size: 0.16rem;
	color:#fff;
	background-color: #659ff5;
	border-radius:0.04rem;
	box-sizing: border-box;
	margin-top: 0.09rem;
}
.per_box .tips{
	color:#999;
	font-size: 0.12rem;
	padding: 0.08rem 0;
}
.per_box .tips a {
	color: #659ff5;
	text-decoration: underline;
}
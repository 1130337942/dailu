.banner {
	min-width: 1200px;
	width: 100%;
	height: 468px;	
	position: relative;
	margin-bottom: 600px;	
}
.banner .info {
	width: 100%;		
	margin-top: 228px;
	text-align: center;
	position: absolute;  
	top: 0;
	left: 0;
}
.banner .info .tit {
	font-size: 24px;
}
.banner .info .msg {
	font-weight: 300;
	margin-top: 10px;
	font-size: 18px;
}
.banner .month_recom {
	padding-left: 45px;
	padding-top: 35px;
	width: 1155px;
	height: 105px;
	background-color: #ffffff;
	box-shadow: 0px 2px 16px 0px 
		rgba(51, 51, 51, 0.1);
	border-radius: 4px;
	position: absolute;
	left: 50%;
	margin-left: -600px;
	bottom:-82px;
}
.month_recom .tit {
	font-size: 20px;
	font-weight: 600;
}
.month_recom .tit::after {
	margin-top: 5px;
	display: block;
	content: '';
	width: 36px;
	height: 3px;
	background-color: #333;
}
.month_recom .month_wap {
	font-size: 18px;
	color: #999;
}
 .month_recom .month_wap span {
 	margin-right: 42px;
 	position: relative;
 	cursor: pointer;
 }
  .month_recom .month_wap span.active,
  .month_recom .month_wap span:hover{
  		color: #659ff5;
  }
  .month_recom .month_wap span.active::after,
  .month_recom .month_wap span:hover::after{
  		display: block;
  }
  .month_recom .month_wap span::after {
  	position: absolute;
  	left: 50%;
  	margin-left: -3px;
  	bottom: -5px;
  	display: none;
  	content: '';
	width: 6px;
	height: 3px;
	background-color: #659ff5;
	border-radius: 1px;
  }
 .month_wap {
 	width: 950px;
 	height: 68px;
 	line-height: 60px;
 	background: #fff url(/static/v1/img/ruler.png) left bottom no-repeat;
 }

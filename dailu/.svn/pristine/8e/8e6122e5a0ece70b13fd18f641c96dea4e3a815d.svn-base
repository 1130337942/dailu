     function getHour(s1, s2) {
        s1= s1+':00'
        s2= s2+':00'
        var reDate = /\d{4}-\d{1,2}-\d{1,2} /;
        s1 = new Date((reDate.test(s1) ? s1 : '2017-1-1 ' + s1 ).replace(/-/g, '/'));
        s2 = new Date((reDate.test(s2) ? s2 : '2017-1-1 ' + s2 ).replace(/-/g, '/'));
        var ms = s2.getTime() - s1.getTime();
        if (ms < 0) return 0;
        return ms / 1000 / 60 / 60;
    }


.hide {
	display: none;
}
.checkBox{
	cursor: pointer;
	margin-right: 15px;
	font-size: 14px;
	color: #999;
}
.checkBox::before {
	margin-right: 6px;
	display: inline-block;
	content:'';
	vertical-align: middle;
	width: 12px;
	height: 12px;
	border: 1px solid #e5e5e5;
	background-color: #fafafa;
}
.on.checkBox::before {
	background: #fff url(/static/v1/img/checked.png) center center no-repeat;
}
input,select{
     appearance:none;
    -moz-appearance:none;
   -webkit-appearance:none;  
	outline: none;
	border: none;
	font-family: 'DINMittelschriftStd';
}
.progress {
	background-color: #f6f6f6;
	width: 100%;
	position: fixed;
	z-index: 10;
	left: 0;
	top: 28px;
	padding-top: 2px;
	height: 70px;
	/*background-color: #f6f6f6;*/
	border-bottom: 1px solid #e5e5e5;
}
.progress .main {
	height: 100%;
	width: 1200px;
	margin: 0 auto;
}
.progress .logo{
	padding-top: 13px;
	width: 87px;
	height: 40px;
} 
.progress .progress_info{
	line-height: 70px;
	color: #999;
}
.progress .progress_info i{
	display: inline-block;
	width: 136px;
	height: 2px;
	border-radius: 1px;
	background-color: #e5e5e5;
	margin:0 12px;
	vertical-align: middle;
	position: relative;
}
.progress .progress_info i::after {
	position: absolute;
	top: -2px;
	right: 0px;
	display: inline-block;
	content: '';
	width: 6px;
	height: 6px;
	border-radius: 50%;
	background-color: #e5e5e5;
}
.progress .progress_info .active{
	color:#659ff5;
}
.progress .progress_info .active i,
.progress .progress_info .active i::after {
	background-color: #659ff5;
}


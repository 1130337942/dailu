.hide {
	display: none;
}
.checkBox{
	cursor: pointer;
	margin-right: 15px;
	font-size: 14px;
	color: #999;
}
.checkBox::before {
	margin-right: 6px;
	display: inline-block;
	content:'';
	vertical-align: middle;
	width: 12px;
	height: 12px;
	border: 1px solid #e5e5e5;
	background-color: #fafafa;
}
.on.checkBox::before {
	background: #fff url(/static/v1/img/checked.png) center center no-repeat;
}

input,select{
     appearance:none;
    -moz-appearance:none;
   -webkit-appearance:none;  
	outline: none;
	border: none;
	margin-left: 0;
}

.minWap{
	padding-top: 112px;
	width: 1200px;
	margin: 0 auto;
}

.minWap .leftWap {
	width: 860px;
	box-shadow: 0px 0px 10px 0px 
		rgba(0, 0, 0, 0.04);
	border-radius: 4px;
}
.minWap .leftWap .trainInfo {
	width: 788px;
	padding: 0 36px;
	background-color: #fff;
	box-shadow: 0px 0px 10px 0px 
		rgba(0, 0, 0, 0.04);
	border-radius: 4px;
}
.minWap .leftWap .title {
	height: 50px;
	line-height: 50px;
	font-weight: 600;
	position: relative;
	border-bottom: 1px solid #e5e5e5;
}
.minWap .leftWap .title::before {
	display:block;
	content: '';
	width: 3px;
	height: 15px;
	background-color: #659ff5;
	position: absolute;
	top: 50%;
	margin-top: -7px;
	left: -12px;
}
.minWap .leftWap .title .tip {
	font-size: 14px;
}
.minWap .leftWap .title a.tip{
	color: #659ff5;
	text-decoration: underline;
}
.minWap .leftWap .title i {
	display: inline-block;
	vertical-align: middle;
	width: 1px;
	height: 15px;
	background-color: #cccccc;
	margin: 0 15px;
}
.minWap .leftWap .trainInfo .train{
	height: 68px;
	padding-top: 20px;
}
.minWap .leftWap .train .wap1 {
	text-align: center;
	width: 72px;
}
.minWap .leftWap .train .wap2 {
	width: 350px;
	height: 100%;
	margin-left: 150px;
}
.minWap .leftWap .train .wap3 {
	text-align: center;
	width: 80px;
}  
.minWap .leftWap .train .fz24 {
	font-size: 24px;
	font-family: DINMittelschriftStd;
}
.minWap .leftWap .train .money {
	color: #f4a21e;
}
.minWap .leftWap .train .fz14 {
	font-size: 14px;
	color: #999;
	font-family: DINMittelschriftStd;
}
.minWap .leftWap .train .wap2 .inblock {
	display: inline-block;
	vertical-align: middle;
}
.minWap .leftWap .train .wap2  .leave,
.minWap .leftWap .train .wap2  .deast {
	width: 120px;
	text-align: center;
}
.minWap .leftWap .train .wap2  .arr{
	padding-bottom: 10px;
	font-family: DINMittelschriftStd;
	font-size: 12px;
	color: #659ff5;
	width: 90px;
	text-align: center;
	background: #fff url(/static/v1/img/dsaddg.png) center bottom no-repeat;
}

.minWap .leftWap .payWap{
	width: 788px;
	padding:0 36px;
	height: 68px;
	line-height: 68px;
	background-color: #ffffff;
	box-shadow: 0px 0px 10px 0px 
		rgba(0, 0, 0, 0.04);
	border-radius: 4px;
	font-weight: 600;
	margin: 8px 0 68px 0;
}
.minWap .leftWap .payWap .pay {
	font-family: DINMittelschriftStd;
	font-size: 24px;
	color: #f4a21e;
	font-weight: 500;
}
.minWap .leftWap .payWap  .submit_btn {
	display: inline-block;
	width: 120px;
	height: 38px;
	line-height:38px;
	text-align: center;
	background-color: #f4a21e;
	border-radius: 4px;
	color: #fff;
	font-size: 16px;
	vertical-align: middle;
	margin-left: 25px;
}
.minWap .leftWap .payWap  .submit_btn:hover {
	background-color: #dc8c0c;
}

.minWap .rightWap{
	width: 332px;
}
.minWap .rightWap .title {
	height: 50px;
	line-height: 50px;
	font-weight: 600;
	border-bottom: 1px solid #e5e5e5;
}
.minWap .rightWap .orderInfo {
	width: 284px;
	padding:0 24px;
	background-color: #fff;
}
.minWap .rightWap .orderInfo .list {
	line-height: 30px;
}
.minWap .rightWap .orderInfo .list .tit {
	display: inline-block;
	vertical-align: middle;
	width: 220px;
	font-size: 14px;
	color: #666;
}
.minWap .rightWap .orderInfo .list .price{
	color: #f4a21e;
	font-size: 18px;
	font-family: DINMittelschriftStd;
}
.minWap .rightWap .orderInfo .listBox {
	padding: 20px 0;
	border-bottom: 1px solid #e5e5e5;
}
.minWap .rightWap .orderInfo .tot{
	font-size: 18px;
	height: 56px;
	line-height: 56px;
	font-weight: 600;
}
.minWap .rightWap .warm {
	margin-top: 8px;
	width: 284px;
	padding:0 24px;
	background-color: #fff;
}
.minWap .rightWap .warm  .text {
	padding: 16px 0 36px ;
	color: #999;
	font-size: 14px;
}